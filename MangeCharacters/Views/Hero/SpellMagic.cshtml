@model MangeCharacters.Models.MagicSpell

@{
    ViewData["Title"] = "RaceSkills";
}

<h2>Race - Skills</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayFor(model => model.Name)
        </dt>
        @foreach(var item in Model.Spells)
        {
            <dd>
                @item
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Back", null, null, null, new { href = Context.Request.Headers["Referer"].ToString() })

</div>

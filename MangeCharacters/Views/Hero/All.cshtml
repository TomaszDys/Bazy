@model IEnumerable<MangeCharacters.Models.HeroViewModel>

@{
    ViewData["Title"] = "All";
}

<h2>Heroes</h2>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HeroId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Strength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Magic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RaceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfessionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CultName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HeroId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Strength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Magic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RaceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProfessionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CultName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { heroId = item.HeroId }) |
                @Html.ActionLink("Delete", "Delete", new { heroId = item.HeroId }) |
                @if (ViewData["Role"]?.ToString() == "admin")
                {
                    @Html.ActionLink("LevelUp", "LevelUp", new { heroId = item.HeroId })    
                }
            </td>
        </tr>
}
    </tbody>
</table>

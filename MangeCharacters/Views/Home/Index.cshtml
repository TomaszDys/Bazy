@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (ViewData["UserName"] != null)
            {
                <h2>
                    Zalogowany jako: @ViewData["UserName"] - @ViewData["Role"]

                </h2>
            }
            else
            {
                <a asp-controller="Login" class="btn btn-default">Login</a>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (ViewData["UserName"] != null)
            {
                <a asp-controller="Hero" asp-action="Your" class="btn btn-info">Your Heros</a>
                @if (ViewData["Role"]?.ToString() == "admin")
                {
                    <a asp-controller="Hero" asp-action="All" class="btn btn-danger">All Heroes</a>
                    <a asp-controller="Hero" asp-action="PickRace" class="btn btn-warning">Create Hero</a>
                }
            }
        </div>
    </div>
</div>